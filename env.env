REACT_APP_AUTO_UPGRADE_QUALITY=true
REACT_APP_DEFAULT_IMAGE_QUALITY=medium

# QR Code Settings
REACT_APP_QR_CODE_SIZE=300
REACT_APP_QR_CODE_FORMAT=png
