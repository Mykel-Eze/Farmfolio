# API Configuration
REACT_APP_API_BASE_URL=https://farmfoliodev.azurewebsites.net/api
REACT_APP_API_TIMEOUT=30000

# Application URLs
REACT_APP_BASE_URL=https://farmfolio.com
REACT_APP_STORY_BASE_URL=https://farmfolio.com/story

# Azure Blob Storage (for media)
REACT_APP_AZURE_STORAGE_URL=https://farmfolioblob.blob.core.windows.net
REACT_APP_AZURE_CDN_URL=https://farmfolio.azureedge.net

# Google Maps API (for marketplace map)
REACT_APP_GOOGLE_MAPS_API_KEY=AIzaSyAzjXvn6ONQ2DjuXd1xP7TCLLMdp2Xd6xM

# Authentication
REACT_APP_TOKEN_KEY=farmfolio_auth_token
REACT_APP_USER_KEY=farmfolio_user_data
